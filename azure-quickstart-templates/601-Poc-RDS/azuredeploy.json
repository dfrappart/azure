{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
      "storageAccountName": {
      "type": "string",
      "metadata": {
        "Description": "Nom du compte de stockage (3 à 24 caractères en minuscules)"
      },
      "defaultValue": "storageposrds"
    },
      "ADpublicIPAddressName": {
      "type": "string",
      "metadata": {
        "Description": "Nom de la ressource IP Publique (devant le Load Balancer AD)"
      },
      "defaultValue": "IP-PUB-AD"
    },
      "ADdnsPrefix": {
      "type": "string",
      "metadata": {
        "description": "prefix DNS de l'IP publique utilisée par le Load Balancer"
      }, 
      "defaultValue": "adfqdnpoc"
    },
      "adAvailabilitySetName": {
      "type": "string",
      "metadata": {
        "Description": "Nom du groupe de disponibilté AD"
      },
      "defaultValue": "AvSet-AD"
    }    
  },
  "variables": {
    
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('storageAccountName')]",
      "apiVersion": "2016-01-01",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "Storage",
      "properties": { }
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[parameters('ADpublicIPAddressName')]",
      "apiVersion": "2016-03-30",
      "location": "[resourceGroup().location]",
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[parameters('ADdnsPrefix')]"
        }
      }
    },
    {
      "type": "Microsoft.Compute/availabilitySets",
      "name": "[parameters('adAvailabilitySetName')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "properties": { }
    }
  ]
}